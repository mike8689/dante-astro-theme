---
interface Props {
    title: string;
    text: string;
    image: {
        src: string;
        alt: string;
    };
    actions?: Array<{
        text: string;
        href: string;
    }>;
}

const { title, text, image, actions } = Astro.props;
---

<div class="container mx-auto px-4 py-12 max-w-[1400px]">
    <div class="flex flex-col md:flex-row items-center gap-8">
        <!-- 左侧文字部分 -->
        <div class="w-full md:w-1/2 space-y-6">
            <h1 class="text-4xl font-serif font-medium text-[var(--text-main)]">{title}</h1>
            <p class="text-lg text-[var(--text-muted)]">{text}</p>
            {actions && actions.length > 0 && (
                <div class="flex gap-4">
                    {actions.map(action => (
                        <a 
                            href={action.href}
                            class="inline-block px-6 py-3 bg-[var(--primary)] text-[var(--text-inverse)] rounded-lg hover:opacity-90 transition-opacity"
                        >
                            {action.text}
                        </a>
                    ))}
                </div>
            )}
        </div>
        
        <!-- 右侧图片部分 -->
        <div class="w-full md:w-1/2">
            <img
                src={image.src}
                alt={image.alt}
                class="w-full h-auto rounded-lg shadow-lg"
            />
        </div>
    </div>
</div>